import { useEffect, useMemo, useState } from 'react';
import { useDispatch, useSelector } from 'react-redux';
import { selectCurrentLedgerId, loadLedgers } from '../features/ledger/ledgerSlice';
import { fetchCategories } from '../services/categories';
import { fetchTransactions } from '../services/transactions';
import { Card } from '@tremor/react';
import SmoothLineChart from '../components/SmoothLineChart';

const fmt = (n) => Number(n || 0).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });

function monthRangeToday() {
  const now = new Date();
  const start = new Date(now.getFullYear(), now.getMonth(), 1);
  const end = new Date(now.getFullYear(), now.getMonth() + 1, 0);
  const to = (d) => `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2, '0')}-${String(d.getDate()).padStart(2, '0')}`;
  return { start: to(start), end: to(end) };
}

export default function CategoryAnalytics() {
  const dispatch = useDispatch();
  const ledgerId = useSelector(selectCurrentLedgerId);
  const [type, setType] = useState('expense');
  const [{ start, end }, setRange] = useState(monthRangeToday());
  const [tx, setTx] = useState([]);
  const [loading, setLoading] = useState(false);
  const [selectedCat, setSelectedCat] = useState('');

  useEffect(() => { dispatch(loadLedgers()); }, [dispatch]);

  useEffect(() => {
    if (!ledgerId) return;
    (async () => {
      setLoading(true);
      try {
        const rows = await fetchTransactions({ ledger_id: ledgerId, start_date: start, end_date: end, type });
        setTx(rows || []);
      } finally { setLoading(false); }
    })();
  }, [ledgerId, start, end, type]);

  const byCategory = useMemo(() => {
    const map = new Map();
    for (const t of tx) {
      const key = t.category_id;
      if (!map.has(key)) map.set(key, { id: key, name: t.category_name, amount: 0, count: 0 });
      const v = map.get(key);
      v.amount += Number(t.amount || 0);
      v.count += 1;
    }
    return Array.from(map.values()).sort((a,b) => b.amount - a.amount);
  }, [tx]);

  const categoryOptions = byCategory.map(c => ({ id: String(c.id), name: c.name }));
  const selectedName = categoryOptions.find(o => o.id === String(selectedCat))?.name;

  // é»˜è®¤é€‰æ‹©ç¬¬ä¸€ä¸ªæœ‰æ•°æ®çš„åˆ†ç±»ï¼Œä¿è¯å›¾è¡¨â€œæœ‰æ•°æ®æ˜¾ç¤ºâ€?  useEffect(() => {
    if (!selectedCat && categoryOptions.length > 0) {
      setSelectedCat(categoryOptions[0].id);
    }
  }, [categoryOptions, selectedCat]);

  function enumerateDates(s, e) {
    const res = [];
    const sd = new Date(s), ed = new Date(e);
    for (let d = new Date(sd); d <= ed; d.setDate(d.getDate() + 1)) {
      const y = d.getFullYear();
      const m = String(d.getMonth() + 1).padStart(2, '0');
      const day = String(d.getDate()).padStart(2, '0');
      res.push(`${y}-${m}-${day}`);
    }
    return res;
  }

  const chartData = useMemo(() => {
    if (!selectedCat) return [];
    // æ±‡æ€»ä¸ºâ€œæ—¥æ€»é¢â€ï¼Œå¹¶è¡¥é½æ— äº¤æ˜“æ—¥æœŸä¸?0ï¼Œç»˜åˆ¶è¿žç»­è¶‹åŠ¿çº¿
    const sums = new Map();
    for (const t of tx) {
      if (String(t.category_id) !== String(selectedCat)) continue;
      const day = (t.date || '').slice(0, 10);
      sums.set(day, (sums.get(day) || 0) + Number(t.amount || 0));
    }
    return enumerateDates(start, end).map(d => ({ date: d, amount: sums.get(d) || 0 }));
  }, [tx, selectedCat, start, end]);

  return (
    <div className="mx-auto w-full max-w-6xl px-4 py-8">
      <h1 className="mb-6 text-center text-xl font-semibold text-gray-900">Category</h1>

      <div className="mb-6 flex flex-wrap items-center justify-between gap-3">
        <div className="flex items-center gap-2 text-sm">
          <span className="text-gray-600">Date Range</span>
          <input type="date" value={start} onChange={(e)=>setRange(r=>({ ...r, start: e.target.value }))} className="rounded-md border px-2 py-1" />
          <span className="text-gray-500">â€?/span>
          <input type="date" value={end} onChange={(e)=>setRange(r=>({ ...r, end: e.target.value }))} className="rounded-md border px-2 py-1" />
        </div>
        <div className="inline-flex overflow-hidden rounded-xl border">
          <button
            className={(type==='expense'?'bg-blue-600 text-white':'text-blue-600')+" px-3 py-1 text-sm"}
            onClick={()=>setType('expense')}
          >Expense</button>
          <button
            className={(type==='income'?'bg-blue-600 text-white':'text-blue-600')+" border-l px-3 py-1 text-sm"}
            onClick={()=>setType('income')}
          >Income</button>
        </div>
      </div>

      {/* Category cards */}
      <div className="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        {byCategory.map((c) => (
          <Card key={c.id} className={"ring-1 ring-gray-200 " + (String(selectedCat)===String(c.id)?'border-blue-500':'')}
            onClick={()=>setSelectedCat(String(c.id))}
          >
            <div className="flex items-start justify-between">
              <div>
                <div className="text-sm font-medium text-gray-900">{c.name}</div>
                <div className="text-xs text-gray-500">{c.count} transaction{c.count!==1?'s':''}</div>
              </div>
            </div>
            <div className="mt-2 text-right text-lg font-semibold">${fmt(c.amount)}</div>
          </Card>
        ))}
        {byCategory.length === 0 && (
          <div className="col-span-full rounded-xl border border-dashed p-6 text-center text-gray-500">
            {loading ? 'Loadingâ€? : 'No transactions in range'}
          </div>
        )}
      </div>

      {/* Category selector + chart */}
      <div className="mb-3 flex items-center gap-3">
        <span className="text-sm text-gray-700">Category wise transactions</span>
        <select
          className="rounded-xl border border-gray-300 px-3 py-2 text-sm"
          value={selectedCat}
          onChange={(e)=>setSelectedCat(e.target.value)}
        >
          <option value="">All</option>
          {categoryOptions.map(opt => (
            <option key={opt.id} value={opt.id}>{opt.name}</option>
          ))}
        </select>
      </div>

      <Card className="ring-1 ring-gray-200">
        {chartData.length === 0 ? (
          <div className="py-12 text-center text-gray-500">Select a category to see chart</div>
        ) : (
          <div className="p-2">
            <SmoothLineChart data={chartData} color="#2563eb" height={320} showPoints={true} />
          </div>
        )}
      </Card>
    </div>
  );
}

